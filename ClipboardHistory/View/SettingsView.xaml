<Window x:Class="ClipboardHistory.View.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsView" Height="104" Width="307" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" SizeToContent="WidthAndHeight" Margin="6" Padding="6">
    <Grid Margin="6">
        <TextBox Name="tbListCount" Text="{Binding Path = ListCount, Mode = TwoWay}" HorizontalAlignment="Left" Height="23" Width="289" Margin="0,6,0,0" VerticalAlignment="Top" />
        <Button Content="OK" Command="{Binding OkCommand}" Width="75" Margin="134,34,0,0" IsDefault="True" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" />
        <Button Content="Отмена" Width="75" Margin="214,34,0,0" IsCancel="True" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" />
    </Grid>
</Window>

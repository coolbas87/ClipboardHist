<Window x:Class="ClipboardHistory.View.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Натсройки" Height="131" Width="307" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" SizeToContent="WidthAndHeight" Margin="6" Padding="6">
    <Grid Margin="6">
        <TextBox Name="tbListCount" Text="{Binding Path = ListCount, Mode = TwoWay}" HorizontalAlignment="Left" Height="23" Width="289" Margin="0,31,0,0" VerticalAlignment="Top" />
        <Button Content="OK" Command="{Binding OkCommand}" Width="75" Margin="134,64,0,0" IsDefault="True" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" />
        <Button Content="Отмена" Width="75" Margin="214,64,0,0" IsCancel="True" HorizontalAlignment="Left" VerticalAlignment="Top" Height="22" />
        <Label Content="Количество сохраняемых элементов" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
